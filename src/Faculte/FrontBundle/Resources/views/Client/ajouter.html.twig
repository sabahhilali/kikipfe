{% extends "FaculteFrontBundle::Front.html.twig" %}

{% block content %}
<div class="main">
    <div class="about_banner_img">
        <img src="images/price.jpg" class="img-responsive" alt=""/></div>
    <div class="about_banner_wrap">
        <h1 class="m_11">Inscription</h1>
    </div>
    <div class="border"> </div>

    <div class="portlet-title">
        <div class="register-top-grid" style="color: #0a6aa1">
            <span class="m_14" style="margin-left:25% "> <h1>Formulaire d'inscription :</h1> </span>
        </div>
    </div>



    <div class="container">
        <div class="col-md-8 contact-top">

            <form enctype="multipart/form-data" class="form-horizontal" action="" method="POST" role="form" style="margin-left: 25%">
                {{ form_errors(form) }}
            {{ form_errors(form2) }}
            {% if errorUsername is defined %}
                {{ errorUsername }}
            {% endif %}
            {% if errorEmail is defined %}
                {{ errorEmail }}
            {% endif %}
            <div class="register-top-grid">


                <div class="register-top-grid" style="color: #0a6aa1">
                    <label> * Informations Personnel : </label>
                </div>


                <br><br><br><br>
                <p> CIN : </p>
                {{ form_widget(form.cin,{'attr': {'class': 'form-control' ,'placeholder':'CIN' }} ) }}
                <br>
                <p> Nom : </p>
                {{ form_widget(form.nom,{'attr': {'class': 'form-control' ,'placeholder':'Nom' }} ) }}
                <br>
                <p> Prénom : </p>
                {{ form_widget(form.prenom,{'attr': {'class': 'form-control' ,'placeholder':'Prénom' }} ) }}
                <br>
                <p> Date de Naissance : </p>
                {{ form_widget(form.dateNaiss,{'attr': {'class': 'form-control','placeholder':'Date de Naissance ' }} ) }}
                <br>
                <p> Lieu de Naissance : </p>
                {{ form_widget(form.lieuNaiss,{'attr': {'class': 'form-control' ,'placeholder':'Lieu de Naissance' }} ) }}
                <br>
                <p> Sexe : </p>
                {{ form_widget(form.sexe,{'attr': {'class': 'form-control'  }} ) }}
                <br>
                <p> Télèphone : </p>
                {{ form_widget(form.tel,{'attr': {'class': 'form-control','placeholder':'Télèphone'  }} ) }}
                <br>
                <p> Adresse : </p>
                {{ form_widget(form.adrss,{'attr': {'class': 'form-control','placeholder':'Adresse'  }} ) }}
                <br>
                <p> Votre Photo : </p>
                {{ form_widget(form.pathFile,{'attr': {'class': 'form-control' ,'placeholder':'Votre Photo' }} ) }}

                <br><br><br>___________________________________________________________________________<br><br><br>

                <div class="register-top-grid" style="color: #0a6aa1">
                    <label> * Informations de Compte : </label>
                </div>
                <br><br><br><br>

                <p> Login : </p>
                {{ form_widget(form2.username,{'attr': {'class': 'form-control','placeholder':'Login' }} ) }}
                <br>
                <p> Email : </p>
                {{ form_widget(form2.email,{'attr': {'class': 'form-control','placeholder':'Email' }} ) }}
                <br>
                <p> Mot de passe : </p>
                {{ form_widget(form2.plainPassword.first,{'attr': {'class': 'form-control','placeholder':'Mot de passe' }} ) }}
                <br>
                <p> Confirmer votre mot de passe : </p>
                {{ form_widget(form2.plainPassword.second,{'attr': {'class': 'form-control','placeholder':'Confirmer votre mot de passe' }} ) }}
                <br>
            </div>


            <div class="form-submit1">
                <input name="submit" type="submit" id="submit" value="Valider">
            </div>
            {{ form_rest(form) }}
            {{ form_rest(form2) }}
            <div class="clear"></div>
            </form>
        </div>
    </div>
</div>
    </div>

{% endblock %}
{% block js %}
    <script type="text/javascript" src="{{ asset('bundles/facultefront/js/jquery.mousewheel.js')}}"></script>
    <script type="text/javascript" src="{{ asset('bundles/facultefront/js/jquery.contentcarousel.js')}}"></script>
    <script type="text/javascript" src="{{ asset('bundles/facultefront/js/jquery.easing.1.3.js')}}"></script>
{% endblock %}

