{% extends "FaculteAdminBundle::Layout.html.twig" %}
 {% block content  %}
     <!-- BEGIN CONTENT -->
     <div class="page-content-wrapper">
         <!-- BEGIN CONTENT BODY -->
         <div class="page-content">
             <!-- BEGIN PAGE HEADER-->
             <h3 class="page-title"> Gestion Des Clients <small> Modifier </small> </h3>




             <div class="page-bar">
                 <ul class="page-breadcrumb">
                     <li>
                         <i class="icon-home"></i>
                         <a href="{{ path('faculte_admin_homepage') }}">Accueil</a>
                         <i class="fa fa-angle-right"></i>
                     </li>
                     <li>
                         <i class="icon-notebook"></i>
                         <a href="{{ path('faculte_admin_liste_client') }}"> Liste Des Clients </a>
                         <i class="fa fa-angle-right"></i>
                     </li>
                     <li>
                         <div class="btn btn-circle border-red-mint"style="color: #e43a45">
                             <i class="fa fa-edit"></i>
                             <span> Modifier Client</span>
                         </div>
                     </li>
                 </ul>
             </div>




             <div class="row">
                 <div class="col-md-12 ">
                     <!-- BEGIN SAMPLE FORM PORTLET-->
                     <div class="portlet light ">

                         <div class="portlet-title">
                             <div class="caption font-red-sunglo">
                                 <i class="fa fa-edit font-red-sunglo"></i>
                                 <span class="caption-subject bold uppercase"> Modifier  Client </span>
                             </div>
                         </div>

                         <div class="portlet-body form">
                             <form enctype="multipart/form-data" class="form-horizontal" action="{{ path('faculte_admin_modifier_client',{'idClt':Client.id}) }}" method="POST" role="form" style="margin-left: 25%">
                                 {{ form_errors(form) }}
                                 <div class="form-body">

                                     <div class="form-group">
                                         <label>CIN</label>
                                         <div class="input-group col-md-4">
                                             <span class="input-group-addon"><i class="fa fa-credit-card"></i></span>
                                             {{ form_widget(form.cin,{'attr': {'class': 'form-control','placeholder':'CIN' }} ) }}
                                         </div>
                                     </div>

                                     <div class="form-group">
                                         <label>Nom</label>
                                         <div class="input-group col-md-4">
                                             <span class="input-group-addon"><i class="fa fa-users"></i></span>
                                             {{ form_widget(form.nom,{'attr': {'class': 'form-control','placeholder':'Nom' }} ) }}
                                         </div>
                                     </div>

                                     <div class="form-group">
                                         <label>Prénom</label>
                                         <div class="input-group col-md-4">
                                             <span class="input-group-addon"><i class="fa fa-user"></i></span>
                                             {{ form_widget(form.prenom,{'attr': {'class': 'form-control','placeholder':'Prenom' }} ) }}
                                         </div>
                                     </div>

                                     <div class="form-group">
                                         <label>Date de Naissance </label>
                                         <div class="input-group col-md-4">
                                             <span class="input-group-addon"><i class="fa fa-calendar-minus-o"></i></span>
                                             {{ form_widget(form.dateNaiss,{'attr': {'class': 'form-control'},'type':'date'} ) }}
                                         </div>
                                     </div>

                                     <div class="form-group">
                                         <label>Lieu de Naissance</label>
                                         <div class="input-group col-md-4">
                                             <span class="input-group-addon"><i class="fa fa-map-o"></i></span>
                                             {{ form_widget(form.lieuNaiss,{'attr': {'class': 'form-control','placeholder':'Lieu de Naissance' }} ) }}
                                         </div>
                                     </div>

                                     <div class="form-group">
                                         <label>Sexe</label>
                                         <div class="input-group col-md-4">
                                             <span class="input-group-addon"><i class="fa fa-odnoklassniki"></i></span>
                                             {{ form_widget(form.sexe,{'attr': {'class': 'form-control','placeholder':'Sexe' }} ) }}
                                         </div>
                                     </div>

                                     <div class="form-group">
                                         <label>Télèphone</label>
                                         <div class="input-group col-md-4">
                                             <span class="input-group-addon"><i class="fa fa-mobile"></i></span>
                                             {{ form_widget(form.tel,{'attr': {'class': 'form-control','placeholder':'Télèphone' }} ) }}
                                         </div>
                                     </div>

                                     <div class="form-group">
                                         <label>Adresse</label>
                                         <div class="input-group col-md-4">
                                             <span class="input-group-addon"><i class="fa fa-map-signs"></i></span>
                                             {{ form_widget(form.adrss,{'attr': {'class': 'form-control','placeholder':'Adresse' }} ) }}
                                         </div>
                                     </div>

                                     <div class="form-group">
                                         <label>Fichier</label>
                                         <div class="input-group col-md-4">
                                             <span class="input-group-addon"><i class="fa fa-file-o"></i></span>
                                             {{ form_widget(form.pathFile,{'attr': {'class': 'form-control' }} ) }}
                                         </div>
                                     </div>

                                     {{ form_rest(form) }}
                                 </div>
                                 <div class="form-actions" style="margin-left: 15%">
                                     <button type="submit" class="btn blue">Mettre à jour</button>
                                     <button type="button" class="btn default" onclick='location.href="{{ path('faculte_admin_liste_client') }}"'>Annuler</button>
                                 </div>
                             </form>
                         </div>
                     </div>
                     <!-- END SAMPLE FORM PORTLET-->
                 </div>
             </div>
         </div>
     </div>
 {% endblock %}
 {% block js %}
     <script type="text/javascript">
         $(document).ready(function(){
             $('select').selectpicker();
             $('.datepicker').datepicker();
         });
     </script>
 {% endblock %}


