{% extends "FaculteAdminBundle::Layout.html.twig" %}

{% block content %}
    <div class="page-content-wrapper">
        <!-- BEGIN CONTENT BODY -->
        <div class="page-content" style="min-height:375px">
            <!-- BEGIN PAGE HEADER-->
            <!-- BEGIN THEME PANEL -->
            <!-- END THEME PANEL -->
            <h3 class="page-title"> Accueil
                <small>Accueil &amp; statistiques</small>
            </h3>
            <div class="page-bar">
                <ul class="page-breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        <a href="index.html"> Accueil </a>
                    </li>
                </ul>
            </div>

            {% set NbrAdherent = 0 %}
            {% for u in Adherents %}
                {% set NbrAdherent = NbrAdherent+1 %}
            {% endfor %}

            {% set NbrCoach = 0 %}
            {% for u in Coachs %}
                {% set NbrCoach = NbrCoach+1 %}
            {% endfor %}

            {% set NbrClient = 0 %}
            {% for u in Clients %}
                {% set NbrClient = NbrClient+1 %}
            {% endfor %}

            {% set NbrActivite = 0 %}
            {% for u in Activites %}
                {% set NbrActivite = NbrActivite+1 %}
            {% endfor %}

            {% set NbrExercice = 0 %}
            {% for u in Exercices %}
                {% set NbrExercice = NbrExercice+1 %}
            {% endfor %}








            <!-- END PAGE HEADER-->
            <!-- BEGIN DASHBOARD STATS 1-->
            <div class="row">

                <!-- Personne -->
                <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                    <div class="dashboard-stat blue">
                        <div class="visual">
                            <i class="icon-user-following"></i>
                        </div>
                        <div class="details">
                            <div class="number">
                                <span data-counter="counterup" data-value={{ NbrAdherent }}>0</span>
                            </div>
                            <div class="desc"> Adherent</div>
                        </div>
                        <a class="more" href="{{ path('faculte_admin_liste_adherent') }}"> Plus de détail
                            <i class="m-icon-swapright m-icon-white"></i>
                        </a>
                    </div>
                </div>
                <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                    <div class="dashboard-stat red">
                        <div class="visual">
                            <i class="icon-trophy"></i>
                        </div>
                        <div class="details">
                            <div class="number">
                                <span data-counter="counterup" data-value={{ NbrCoach }}>0</span>
                            </div>
                            <div class="desc"> Coach</div>
                        </div>
                        <a class="more" href="{{ path('faculte_admin_liste_coach') }}"> Plus de détail
                            <i class="m-icon-swapright m-icon-white"></i>
                        </a>
                    </div>
                </div>
                <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                    <div class="dashboard-stat green">
                        <div class="visual">
                            <i class="icon-badge"></i>
                        </div>
                        <div class="details">
                            <div class="number">
                                <span data-counter="counterup" data-value={{ NbrClient }}>0</span>
                            </div>
                            <div class="desc"> Client</div>
                        </div>
                        <a class="more" href="{{ path('faculte_admin_liste_client') }}"> Plus de détail
                            <i class="m-icon-swapright m-icon-white"></i>
                        </a>
                    </div>
                </div>

                <!-- Autres -->
                <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                    <div class="dashboard-stat purple-soft">
                        <div class="visual">
                            <i class="icon-layers"></i>
                        </div>
                        <div class="details">
                            <div class="number">
                                <span data-counter="counterup" data-value={{ NbrActivite }}>0</span>
                            </div>
                            <div class="desc"> Activite </div>
                        </div>
                        <a class="more" href="{{ path('faculte_admin_liste_activite') }}"> Plus de détail
                            <i class="m-icon-swapright m-icon-white"></i>
                        </a>
                    </div>
                </div>
                <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                    <div class="dashboard-stat yellow-lemon">
                        <div class="visual">
                            <i class="icon-social-dribbble"></i>
                        </div>
                        <div class="details">
                            <div class="number">
                                <span data-counter="counterup" data-value={{ NbrExercice }}>0</span>
                            </div>
                            <div class="desc"> Exercice </div>
                        </div>
                        <a class="more" href="{{ path('faculte_admin_liste_exercice') }}"> Plus de détail
                            <i class="m-icon-swapright m-icon-white"></i>
                        </a>
                    </div>
                </div>

            </div>

        </div>
        <!-- END CONTENT BODY -->

        <!-- END PORTLET-->
    </div>

{% endblock %}
