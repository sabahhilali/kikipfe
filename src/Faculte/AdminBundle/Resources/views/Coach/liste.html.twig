{% extends "FaculteAdminBundle::Layout.html.twig" %}
{% block content %}
    <!-- BEGIN CONTENT -->
    <div class="page-content-wrapper">
        <!-- BEGIN CONTENT BODY -->
        <div class="page-content">
            <!-- BEGIN PAGE HEADER-->
            <h3 class="page-title"> Gestion Des Coachs <small> Liste </small>
            </h3>


            <div class="page-bar">
                <ul class="page-breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        <a href="{{ path('faculte_admin_homepage') }}">Accueil</a>
                        <i class="fa fa-angle-right"></i>
                    </li>
                    <li>
                        <div class="btn btn-circle border-red-mint"style="color: #e43a45">
                            <i class="icon-notebook"></i>
                            <span>Liste Coach</span>
                        </div>

                    </li>
                </ul>
            </div>


            <div class="row">
                <div class="col-md-12">
                    <!-- BEGIN PORTLET-->
                    <div class="portlet light form-fit bordered">
                        <!-- BEGIN EXAMPLE TABLE PORTLET-->
                        <div class="portlet light ">
                            <div class="portlet-title">
                                <div class="caption font-dark">
                                    <a  class="btn green-sharp btn-outline  btn-block "  href="{{ path('faculte_admin_ajouter_coach')}}"><i class="fa fa-plus-circle "> Coach</i></a>
                                </div>
                            </div>
                            <div class="portlet-body">
                            <table class="table table-striped table-bordered table-hover" id="sample_1">
                                <thead style="background-color: #17C4BB">
                                <tr style="color: white">
                                    <th> Nom </th>
                                    <th> Prénom </th>
                                    <th> Sexe  </th>
                                    <th> Télèphone</th>
                                    <th> Salaire </th>
                                    <th> Fichier</th>
                                    <th> Actions </th>
                                </tr>
                                </thead>
                                <tbody>
                                {% if Coach is not empty %}
                                    {% for coach in Coach %}
                                        <tr>
                                            <td> {{ coach.nom    }}       </td>
                                            <td> {{ coach.prenom }}       </td>
                                            <td> {{ coach.sexe   }}       </td>
                                            <td> {{ coach.tel    }}       </td>
                                            <td> {{ coach.salaire}}       </td>
                                            <td>

                                                <div class="cbp-item identity logos" >
                                                    <a   target="_blank" href="{{ asset('files/coachs/'~coach.id~'/'~coach.pathFile) }}" class="cbp-caption cbp-lightbox" data-title="Client chat app WIP<br>by Paul Flavius Nechita">
                                                        <div class="cbp-caption-defaultWrap">
                                                            <img src="{{ asset('files/coachs/'~coach.id~'/'~coach.pathFile) }}" alt="Coach" class="img-circle"  style="width: 50px;height: 50px;">
                                                        </div>
                                                    </a>
                                                </div>
                                            </td>

                                            <td>
                                                <a href="{{ path('faculte_admin_suit_coach',{'idC':coach.id})}}" class="btn btn-circle btn-icon-only green">
                                                    <i class="icon-magnifier font-white"> </i>
                                                </a>

                                                <a href="{{ path('faculte_admin_modifier_coach',{'idC':coach.id}) }}" class="btn btn-circle btn-icon-only blue">
                                                    <i class="fa fa-edit font-white"></i>
                                                </a>

                                                <a href="#modal-delete{{ coach.id }}"  data-toggle="modal" class="btn btn-circle btn-icon-only red">
                                                    <i class="fa fa-trash-o font-white"></i>
                                                </a>
                                            </td>
                                        </tr>

                                        <div id="modal-delete{{coach.id}}" class="modal fade" role="dialog" aria-labelledby="myModalLabel10" aria-hidden="true">
                                            <div class="modal-dialog">
                                                <div class="modal-content">

                                                    <div class="modal-header">
                                                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                                                        <h4 class="modal-title"> Supprimer Coach </h4>
                                                    </div>
                                                    <div class="modal-body">
                                                        <p style="color:darkred" > Voulez-vous supprimer : "{{ coach.nom }}"?</p>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <a href="{{ path('faculte_admin_supprimer_coach',{'idC':coach.id}) }}" class="btn green"> Supprimer</a>
                                                        <button class="btn default" data-dismiss="modal" aria-hidden="true"> Annuler </button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    {% endfor %}
                                {% endif %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <!-- END EXAMPLE TABLE PORTLET-->
                </div>
            </div>
        </div>
    </div>
{% endblock %}

