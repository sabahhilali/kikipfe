{% extends "FaculteAdminBundle::Layout.html.twig" %}
 {% block content %}
     <!-- BEGIN CONTENT -->
     <div class="page-content-wrapper">
     <!-- BEGIN CONTENT BODY -->
     <div class="page-content">
     <!-- BEGIN PAGE HEADER-->
     <h3 class="page-title"> Gestion Des Produits
         <small>Ajouter</small>
     </h3>



     <div class="page-bar">
         <ul class="page-breadcrumb">
             <li>
                 <i class="icon-home"></i>
                 <a href="{{ path('faculte_admin_homepage') }}">Accueil</a>
                 <i class="fa fa-angle-right"></i>
             </li>
             <li>
                 <i class="icon-social-dropbox"></i>
                 <a href="{{ path('faculte_admin_afficher_produit') }}">  Produits </a>
                 <i class="fa fa-angle-right"></i>
             </li>
             <li>
                 <div class="btn btn-circle border-red-mint"style="color: #e43a45">
                     <i class="icon-plus"></i>
                     <span> Ajouter Produit</span>
                 </div>
             </li>
         </ul>
     </div>


     <div class="row">
         <div class="col-md-12 ">
             <!-- BEGIN SAMPLE FORM PORTLET-->
             <div class="portlet light ">

                 <div class="portlet-title">
                     <div class="caption font-red-sunglo">
                         <i class="icon-plus font-red-sunglo"></i>
                         <span class="caption-subject bold uppercase"> Ajouter Produit </span>
                     </div>
                 </div>

                 <div class="portlet-body form">
                     <form enctype="multipart/form-data" class="form-horizontal" action="" method="POST" role="form" style="margin-left: 25%">
                         {{ form_errors(form) }}


                         <div class="form-group">
                             <label>Nom</label>
                             <div class="input-group col-md-4">
                                 <span class="input-group-addon"><i class="fa fa-clone"></i></span>
                                 {{ form_widget(form.nomP,{'attr': {'class': 'form-control','placeholder':'Nom Produit' }} ) }}
                             </div>
                         </div>

                         <div class="form-group">
                             <label>Quantité</label>
                             <div class="input-group col-md-4">
                                 <span class="input-group-addon"><i class="fa fa-clone"></i></span>
                                 {{ form_widget(form.qteP,{'attr': {'class': 'form-control','placeholder':'Quantité Produit' }} ) }}
                             </div>
                         </div>

                         <div class="form-group">
                             <label>Prix</label>
                             <div class="input-group col-md-4">
                                 <span class="input-group-addon"><i class="fa fa-clone"></i></span>
                                 {{ form_widget(form.prixP,{'attr': {'class': 'form-control','placeholder':'Prix Produit' }} ) }}
                             </div>
                         </div>


                         <div class="form-group">
                             <label>Fichier</label>
                             <div class="input-group col-md-4">
                                 <span class="input-group-addon"><i class="fa fa-file-o"></i></span>
                                 {{ form_widget(form.pathFile,{'attr': {'class': 'form-control' }} ) }}
                             </div>
                         </div>

                         {{ form_rest(form) }}
                         <div class="form-actions" style="margin-left: 15%">
                             <button type="submit" class="btn blue">Ajouter</button>
                             <button type="button" class="btn default" onclick='location.href="{{ path('faculte_admin_afficher_produit') }}"'>Annuler</button>
                         </div>
                     </form>
                 </div>
             </div>
             <!-- END SAMPLE FORM PORTLET-->
         </div>
     </div>

 {% endblock %}