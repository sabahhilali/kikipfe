{% extends "FaculteSuperAdminBundle::LayoutSuper.html.twig" %}
 {% block content %}
     <!-- BEGIN CONTENT -->
     <div class="page-content-wrapper">
         <!-- BEGIN CONTENT BODY -->
         <div class="page-content">
             <!-- BEGIN PAGE HEADER-->
             <h3 class="page-title">  Gestion Des Produits
                 <small> Affiche...</small>
             </h3>


             <div class="page-bar">
                 <ul class="page-breadcrumb">
                     <li>
                         <i class="icon-home"></i>
                         <a href="{{ path('faculte_super_admin_homepage') }}">Accueil</a>
                         <i class="fa fa-angle-right"></i>
                     </li>

                     <div class="btn btn-circle border-red-mint" style="color: #e43a45">
                         <i class="icon-social-dropbox"></i>
                         <span> Afficher Produit </span>
                     </div>

                 </ul>
             </div>


             <div class="row">
                 <div class="col-md-12 ">
                     <!-- BEGIN SAMPLE FORM PORTLET-->
                     <div class="portlet light ">

                         <div class="portlet-title">
                             <div class="caption font-red-sunglo">
                                 <i class="icon-social-dropbox font-red-sunglo"></i>
                                 <span class="caption-subject bold uppercase">  Produit </span>
                             </div>
                         </div>

                         <div class="portlet-title">
                             <div class="caption font-dark">
                                 <a class="btn green-sharp btn-outline btn-block " href="{{ path('faculte_super_admin_ajouter_produit')}}"><i class="icon-plus"> Produit </i></a>
                             </div>
                         </div>

                         <div class="row">
                             <div class="portlet-body">
                                 <div class="mt-element-card mt-element-overlay">
                                     <div class="row">

                                         {% if Produit is not empty %}
                                             {% for produit in Produit %}

                                                 <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                                     <div class="mt-card-item">
                                                         <div class="mt-card-avatar mt-overlay-1">
                                                             <img src="{{ asset('files/produitS/'~produit.id~'/'~produit.pathFile) }}" alt="Produit" style="width:250px; height:250px;">                                                             <div class="mt-overlay">
                                                                 <ul class="mt-info">
                                                                     <li>
                                                                         <a class="btn default btn-outline" target="_blank" href="{{ asset('files/produits/'~produit.id~'/'~produit.pathFile) }}">
                                                                             <i class="icon-magnifier"></i>
                                                                         </a>
                                                                     </li>
                                                                     <li>
                                                                         <a class="btn default btn-outline" target="_blank"  href="{{ path('faculte_super_admin_modifier_produit',{'idP':produit.id}) }}">
                                                                             <i class="icon-note"></i>
                                                                         </a>
                                                                     </li>
                                                                     <li>
                                                                         <a class="btn default btn-outline" href="#modal-delete{{ produit.id }}"  data-toggle="modal">
                                                                             <i class="fa fa-trash-o"></i>
                                                                         </a>
                                                                     </li>
                                                                 </ul>
                                                             </div>
                                                         </div>
                                                         <div class="mt-card-content">
                                                             <h3 class="mt-card-name">{{ produit.nomP }} </h3>
                                                             <p class="mt-card-desc font-grey-mint"> Quantit√© : {{ produit.qteP }}</p>
                                                             <p class="mt-card-desc font-grey-mint">Prix : {{ produit.prixP }}</p>

                                                         </div>
                                                     </div>
                                                 </div>


                                                 <div id="modal-delete{{produit.id}}" class="modal fade" role="dialog" aria-labelledby="myModalLabel10" aria-hidden="true">
                                                     <div class="modal-dialog">
                                                         <div class="modal-content">

                                                             <div class="modal-header">
                                                                 <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                                                                 <h4 class="modal-title">Supprimer Produit </h4>
                                                             </div>
                                                             <div class="modal-body">
                                                                 <p style="color:darkred" > Voulez-vous supprimer : "{{ produit.nomP }}"?</p>
                                                             </div>
                                                             <div class="modal-footer">
                                                                 <a href="{{ path('faculte_super_admin_supprimer_produit',{'idP':produit.id}) }}" class="btn green"> Supprimer</a>
                                                                 <button class="btn default" data-dismiss="modal" aria-hidden="true"> Annuler </button>
                                                             </div>
                                                         </div>
                                                     </div>
                                                 </div>



                                             {% endfor %}
                                         {% endif %}


                                     </div>
                                 </div>
                             </div>
                         </div>

                     </div>
                     <!-- END SAMPLE FORM PORTLET-->
                 </div>
             </div>
         </div>
     </div>

 {% endblock %}
